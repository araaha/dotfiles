map rm delete

map t

cmd pager ${{
    set -f
    case $f in
        *.html) w3m -dump $f | moar;;
        *.wav|*.mp3|*.flac|*.m4a|*.wma|*.ape|*.ac3|*.og[agx]|*.spx|*.opus|*.as[fx]|*.mka)
            exiftool $f | moar;;
        *.zip|*.jar|*.war|*.ear|*.oxt) unzip -l "$1" | moar;;
        *.md) mdcat "$f" | moar;;
        *.[1-8]) man "$f" | col -b | moar;;
        *) bat --paging=always $f;;
    esac
}}

map i
map i :pager

