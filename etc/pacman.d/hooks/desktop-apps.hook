[Trigger]
Operation = Install
Operation = Upgrade
Type = Package
Target = alacritty*
Target = firefox*
Target = zen-browser*
Target = localsend*

[Action]
Description = Deleting desktop applications...
When = PostTransaction
Exec = /usr/bin/bash -c "rm -f /usr/share/applications/Alacritty.desktop; rm -f /usr/share/applications/localsend.desktop; rm -f /usr/share/applications/firefox.desktop; rm -f /usr/share/applications/zen.desktop"
